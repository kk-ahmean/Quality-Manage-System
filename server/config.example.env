# MongoDB连接配置
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 服务器配置
PORT=5001
NODE_ENV=development

# CORS配置
CORS_ORIGIN=http://localhost:3000

# 内存数据库模式（当MongoDB不可用时使用）
USE_MEMORY_DB=false

# 日志配置
LOG_LEVEL=INFO
LOG_RATE_LIMIT=50
LOG_MAX_MEMORY=5000
LOG_EXCLUDE_PATHS=/api/health,/api/favicon.ico,/api/robots.txt
LOG_EXCLUDE_METHODS=OPTIONS,HEAD